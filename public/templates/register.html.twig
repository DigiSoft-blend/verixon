{% extends "layoutes/login.html.twig" %}

{% block content %}
 
<nav class="navbar navbar-expand-md">
  <a class="navbar-brand" href="#" style="color:tomato">Verixon</a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#collapsibleNavbar">
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse" id="collapsibleNavbar">
    <ul class="navbar-nav">
      <li class="nav-item">
        <a class="nav-link" href="/"><i class="fas fa-home"></i></a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="/login">login</a>
      </li>   
    </ul>
  </div>  
</nav>

<br>

<div class="container d-flex justify-content-center">

 <div class="col-md-6 mb-4">
 <form style="background-color:inherit; color:beige" class="form-control mb-4" method="POST" action="/registerUser" enctype="multipart/form-data">
 <h3 class="mt-4 mb-4" style="text-align:center">Register to create your verixon account</h3>
 <hr> 
  <div class="form-group">
    <label for="email">Email address:</label>
    <input type="email" class="form-control" name="email" required style="color:black">
  </div>
  
  <p style="color:green" >{{ alert0 }}</p>
  <p style="color:tomato" >{{ alert1 }}</p>
  <p style="color:tomato">{{ connectionError }} </p>

  <div class="form-group">
    <label for="pwd">Password:</label>
    <input type="password" class="form-control" name="password" required style="color:black">
  </div>
   <div class="form-group">
     <label for="image">Choose an image:</label>
     <br>
     <input type="file" name="profileImage" id="fileToUpload">
   </div>
   <p style="color:tomato" >{{ error }}</p>
  <div class="form-check">
    <label class="form-check-label">
      <input class="form-check-input" type="checkbox"> Remember me
    </label>
  </div>
  <button type="submit" class="btn btn-block btn-success" name="submit">Submit</button>
</form>
</div>
</div>

 
{% endblock %}  