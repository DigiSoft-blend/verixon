{% extends "layoutes/login.html.twig" %}

{% block content %}

<div class="container">
 <header class="header clearfix mt-4">
    <nav class="navbar navbar-expand-lg navbar-light" style="color:ghostwhite;">
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarsExample10" aria-controls="navbarsExample10" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse justify-content-md-center" id="navbarsExample10">
      <ul class="navbar-nav float-right">
         <h3 class="text-muted pr-4">PHP GURU</h3>
        <li class="nav-item">
          <a style="color:rgba(203, 233, 300, 1)" class="nav-link" href="/">Home</a>
        </li>
        <li class="nav-item dropdown">
          <a style="color:rgba(203, 233, 300, 1)" class="nav-link dropdown-toggle" data-toggle="dropdown" href="#">VerixonForms</a>
          <div class="dropdown-menu">
            <a class="dropdown-item" href="/registerUser">Sign Up</a>
            <a class="dropdown-item" href="/loginUser">Sign In</a>
          </div>
        </li>
      </ul>
    </div>
    </nav>
  </header>



<br>

 <div class="container d-flex justify-content-center">


 <div class="col-md-6 pb-4 verixon-gradent-text">
 <form  style="background-color:inherit; color: rgb(179, 179, 185); border:solid 1px gray" class="form-control pb-4" method="POST" action="/sendEmail" enctype="multipart/form-data">
  <h2 class="mt-4" style="text-align:center">Send A Mail</h2>
  <hr style="background-color:gray"> 


  <div class="form-group">
    <label for="pwd">Recipients Name:</label>
    <input type="text" class="form-control" name="recipientName" value="Silas udofia" required style="color:black">
  </div>
  <div class="form-group">
    <label for="pwd">Recipients Email address:</label>
    <input type="text" class="form-control" name="toAddress" value="silasudofia469@gmail.com" required style="color:black">
  </div>
   <div class="form-group">
    <label for="pwd">Body:</label>
   <textarea class="form-control" rows="2" id="message" name="body" style="color:black" required></textarea>
   </div>

     {% if success == true %}
        <div class="alert alert-success alert-dismissable fade show fade out">
          <button type="button" class="close" data-dismiss="alert">&times;</button>
          <strong>Message Sent!</strong>  {{ messageSentAlert }} 
        </div>
     {% endif %}
 
   <div class="form-group">
    <input type="file" name="attachment" id="fileToUpload">
   </div>

    <p style="color:tomato"> {{ error }} </p>

    <div class="form-check">
    <label class="form-check-label">
      <input class="form-check-input" type="checkbox"> Remember me
    </label>
    </div>
  
  <button type="submit" class="btn btn-block btn-success" name="submit">Send</button>
</form>
</div>

</div>



 {% endblock %}  